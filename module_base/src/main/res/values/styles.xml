    <!--Button-->
    <style name="button_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_52</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ripple_common_button_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <!--灰色线条-->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
